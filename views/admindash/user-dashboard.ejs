<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shadowies Cafe</title>
    <link rel="stylesheet" href="stylesheet/user-dash.css">
</head>

<body>
    <%- include('../partials/sidebar') %>
        <!--Main Navigation-->



        <div class="container-md dash-content">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-900">Users</h1>


            <!-- DataTales Example -->
            <div class="card shadow me-5 mb-4">
                <div class="card-header py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">Users</h6>
                        <div class="month mt-2">
                            <% data.forEach(function(item) { %>
                                <div class="text-right">
                                    <p class="text-muted">Month: <%= item.monthName %>
                                    </p>
                                    <p class="text-muted">Total User: <%= item.total %>
                                    </p>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">Date Created</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone Number</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">Edit</th>
                                </tr>
                            </thead>
                            <% for(let user of users){ %>
                                <tbody>
                                    <tr>
                                        <th scope="row">
                                            <%= user.createdAt.toLocaleDateString()%>
                                        </th>
                                        <td>
                                            <%= user.fullname %>
                                        </td>
                                        <td>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <%= user.number %>
                                        </td>
                                        <td>
                                            <%= user.address %>
                                        </td>
                                        <td>
                                            <% if(isAdmin){ %>
                                                <form class="d-inline" action="/<%=user._id%>?_method=DELETE"
                                                    method="post">
                                                    <button class="btn-sm">DELETE</button>
                                                </form>
                                                <% } %>
                                        </td>
                                    </tr>

                                </tbody>

                                <% } %>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->


        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center text-muted my-auto">
                    <span>Copyright &copy; Paule Med Cafe 2023</span>
                </div>
            </div>
        </footer>


        </div>


        </div>

        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>




</body>

</html>